<mvc:View controllerName="configapp.controller.App"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">

    <tnt:ToolHeader
            id="shellLikeToolHeader"
            class="sapUiTinyMargin"
        >
            <Button
                icon="sap-icon://menu2"
                type="Transparent"
                tooltip="Menu"
            >
                <layoutData>
                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                </layoutData>
            </Button>
            <Image
                src="/test/images/SAP.jpg"
                decorative="false"
                press="onLogoPressed"
                tooltip="SAP Logo"
            >
                <layoutData>
                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                </layoutData>
            </Image>
            <Title
                text="Configuration"
                wrapping="false"
                id="configuration"
            >
                <layoutData>
                    <OverflowToolbarLayoutData priority="Disappear" />
                </layoutData>
            </Title>
            <!-- <Text
                text="App"
                wrapping="false"
                id="secondTitle"
                
            >
                <layoutData>
                    <OverflowToolbarLayoutData priority="Disappear" />
                </layoutData>
            </Text> -->

            <ToolbarSpacer id="spacer">
                <layoutData>
                    <OverflowToolbarLayoutData
                        priority="Low"
                        group="1"
                    />
                </layoutData>
            </ToolbarSpacer>
            <!-- 
            <OverflowToolbarButton
                icon="sap-icon://source-code"
                type="Transparent"
                tooltip="Action 1"
                text="Action 1"
            >
                <layoutData>
                    <OverflowToolbarLayoutData group="2" />
                </layoutData>
            </OverflowToolbarButton> -->

            <!--             <OverflowToolbarButton
                icon="sap-icon://card"
                type="Transparent"
                tooltip="Action 2"
                text="Action 2"
            >
                <layoutData>
                    <OverflowToolbarLayoutData group="2" />
                </layoutData>
            </OverflowToolbarButton> -->

            <ToolbarSeparator>
                <layoutData>
                    <OverflowToolbarLayoutData group="2" />
                </layoutData>
            </ToolbarSeparator>
            <OverflowToolbarButton
                icon="sap-icon://action-settings"
                type="Transparent"
                text="Settings"
            />
            <Button
                icon="sap-icon://bell"
                type="Transparent"
                tooltip="Notification"
            >
                <layoutData>
                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                </layoutData>
            </Button>
            <tnt:ToolHeaderUtilitySeparator />
            <ToolbarSpacer width="1.125rem" />
            <Avatar
                src="/test/images/user.png"
                displaySize="XS"
                press=".onAvatarPressed"
                tooltip="Profile"
            >
                <layoutData>
                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                </layoutData>
            </Avatar>
        </tnt:ToolHeader>
    <App id="app">
    </App>
</mvc:View>
